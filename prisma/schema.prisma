generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum BadgeStatus {
  DRAFT
  SAVED
  MINTED
  LISTED
}

model BadgeRecord {
  id          String      @id @default(auto()) @map("_id") @db.ObjectId
  userId      String
  name        String
  description String?
  config      Json
  status      BadgeStatus @default(DRAFT)
  imageCid    String?
  metadataCid String?
  tokenUri    String?
  tokenId     String?
  listingId   String?
  price       String?
  ipfsUrl     String
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
}
